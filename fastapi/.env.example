# Application Environment
APP_ENV=production

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS RDS Database Configuration
# Format: postgresql+asyncpg://username:password@rds-endpoint:5432/database_name
# Example: postgresql+asyncpg://postgres:mypassword@mydb.abc123.us-east-1.rds.amazonaws.com:5432/tiernerd
DATABASE_URL=postgresql+asyncpg://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/your-database-name

# CORS Configuration
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Optional: SSL/TLS for RDS (append to DATABASE_URL if needed)
# ?ssl=require&sslmode=require